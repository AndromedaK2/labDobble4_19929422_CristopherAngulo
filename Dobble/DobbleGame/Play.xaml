<Window x:Class="UI.Play"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Play" Height="450" Width="1200">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" Height="230" Margin="40,64,0,0" VerticalAlignment="Top" Width="640"/>
        <TextBlock x:Name="TxtCurrentTurn" HorizontalAlignment="Left" Margin="47,19,0,0" Text="Turno del Jugador Actual" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Click="Spotit" Content="Spotit" HorizontalAlignment="Left" Height="30" Margin="60,354,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Click="PassTurn" Content="Pasar Turno" HorizontalAlignment="Left" Height="30" Margin="470,309,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Click="FinishGame" Content="Finalizar Juego" HorizontalAlignment="Left" Height="30" Margin="585,309,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Ingresar Símbolo en común: " HorizontalAlignment="Left" Margin="55,319,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtSpotit" HorizontalAlignment="Left" Margin="230,324,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Zona de Juego" HorizontalAlignment="Left" Margin="304,28,0,0" VerticalAlignment="Top"/>

        <TextBlock x:Name="TxtFirstCard" FontSize="15" HorizontalAlignment="Left" Margin="90,139,0,0" Text="Primera Carta" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.896,0.629" Height="125" Width="235"/>
        <Label Content="Primer Carta" HorizontalAlignment="Left" Margin="84,83,0,0" VerticalAlignment="Top"/>
        <Label Content="Segunda Carta" HorizontalAlignment="Left" Margin="375,84,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="TxtSecondCard" FontSize="15" HorizontalAlignment="Left" Margin="375,139,0,0" Text="Segunda Carta" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.896,0.629" Height="120" Width="280"/>
        <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" Height="230" Margin="715,64,0,0" VerticalAlignment="Top" Width="365"/>
        <Label Content="Estado Completo del Juego" HorizontalAlignment="Left" Margin="790,19,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="TxtGameStatus" HorizontalAlignment="Left" Margin="756,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>



    </Grid>
</Window>
